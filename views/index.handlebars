<h1>Eat a Burger</h1>

<h3>Uneaten Burger</h3>
<ul>
    {{#each uneatenBurgers}}
    <li>
        <p>Burger: {{this.name}}</p>
    </li>
    {{/each}}
</ul>

<h3>Devoured Burger</h3>
<ul>
    {{#each devouredBurgers}}
    <li>
        <p>Burger: {{this.name}}</p>
    </li>
    {{/each}}
</ul>

<div>
    <form action="/burgers" method="POST">
        <textarea type="text" name="burger"></textarea>

        <button type="submit">Submit</button>
    </form>
</div>
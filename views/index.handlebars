<link rel="stylesheet" href="/public/assets/css/burgerstyle.css" type="text/css" />


<h1>Eat a Burger</h1>

<div class="uneaten">
    <h3>Uneaten Burger</h3>
    <ul>
        {{#each uneatenBurgers}}
        <li>
            <p>Burger: {{this.name}}</p>
            <form action="/devour/{{this.id}}" method="POST">
                <button type="submit">Devour!</button>
            </form>
        </li>
        {{/each}}
    </ul>
</div>

<div class="devoured">
    <h3>Devoured Burger</h3>
    <ul>
        {{#each devouredBurgers}}
        <li>
            <p>Burger: {{this.name}}</p>
        </li>
        {{/each}}
    </ul>
</div>

<div class="burgerForm">
    <form action="/burgers" method="POST">
        <textarea type="text" name="burger"></textarea>
        <br>
        <button type="submit">Submit</button>
    </form>
</div>